Accept: application/json
Content-Type: application/json

{
    "discountCodes" : [
        "BACK-TO-SCHOOL",
        "EMPLOYEE-DISCOUNT"
    ],
    "saleItems": [
        {
            "id": 1,
            "quantity": 2
        },
        {
            "id": 2,
            "quantity": 2
        },
        {
            "id": 3,
            "quantity": 2
        }
    ]
}

